set editor=vim

set realname="Fabian Köhler"
set sendmail="/usr/bin/msmtp -a tudo"
set send_charset="utf-8"
set edit_headers=yes

set mbox_type=Maildir
set folder=${HOME}/.mail/
set spoolfile=+tudo/INBOX
set record=+tudo/INBOX/Sent
set postponed=+tudo/INBOX/Drafts
set header_cache=~/.cache/mutt/tudo-headers

