#!/usr/bin/python3
import subprocess
import re

output = subprocess.check_output(["mpc", "--format", "[[%albumartist% - ]%title%]|[%file%]"]).decode().strip().splitlines()
title = output[0]
m = re.match(r"^\[\w+\]\s+#\d+\/\d+\s+(\d+:\d+\/\d+:\d+)\s+\(\d+%\)$", output[1])
if m is None:
    print(title)
else:
    print(title+" ["+m.group(1)+"]")

