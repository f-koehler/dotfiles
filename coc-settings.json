{
    "coc.source.vimtex.enable": true,
    "html.enable": true,
    "html.format.enable": true,
    "html.suggest.html5": true,
    "languageserver": {
        "fortls": {
            "command": "fortls",
            "args": ["--variable_hover", "--lowercase_intrinsics"],
            "rootPatterns": [".git/", ".hg/", "compile_commands.json"],
            "filetypes": ["fortran"]
        }
    },
    "python.formatting.provider": "yapf",
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.condaPath": "~/.local/opt/anaconda3/bin/conda",
    "python.venvFolders": [
        "envs",
        ".pyenv",
        ".direnv",
        "~/.local/opt/anaconda3/envs/"
    ],
    "python.jediEnabled": true
}
